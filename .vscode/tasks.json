{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C++ Project for Linux (g++)",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/out",
                "-lm" //to compile with standard libraries
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Similar to building a project in Visual Studio."
        },
        {
			"type": "cppbuild",
			"label": "Build C Project [with header files] (gcc)",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${fileDirname}/**.c",
				//"${fileDirname}/Random.c", for individual files, use this
				"${fileDirname}/**.h",
				"-o",
				"${fileDirname}/out",
                "-lm" //to compile with standard libraries
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Similar to building a project in Dev-C++ with header files."
		},
        {
			"type": "cppbuild",
			"label": "Build C Project [without header files] (gcc)",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"${fileDirname}/**.c",
				//"${fileDirname}/Random.c", for individual files, use this
				"-o",
				"${fileDirname}/out",
                "-lm" //to compile with standard libraries
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "Similar to building a project in Dev-C++ without header files."
		}
    ],
    "version": "2.0.0"
}